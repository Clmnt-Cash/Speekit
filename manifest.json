{
  "name": "Speekit",
  "description": "TTS Extension",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting", "storage", "tts"],
  "action": {
    "default_popup": "hello.html",
    "default_icon": {
      "16": "icons/speekit16.png",
      "48": "icons/speekit48.png",
      "128": "icons/speekit128.png"
    }
  },
  "icons": {
    "16": "icons/speekit16.png",
    "48": "icons/speekit48.png",
    "128": "icons/speekit128.png"
  }
}